<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.AnchorPane?>
<AnchorPane prefWidth="450" prefHeight="600" fx:controller="pl.roquv.calculatorjavafx.Controller"
            xmlns:fx="http://javafx.com/fxml">
  <!--Calculation Sequence Label-->
  <Label fx:id="calculationSequenceLabel"
         AnchorPane.topAnchor="40" AnchorPane.leftAnchor="10"/>

  <!--Output Label-->
  <Label fx:id="outputLabel" text="0"
         AnchorPane.topAnchor="90" AnchorPane.leftAnchor="10"/>

  <!--Calculator Grid Buttons-->
  <GridPane AnchorPane.topAnchor="200" AnchorPane.leftAnchor="7">
    <!--Row 0-->
    <Button text="\%" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <Button text="CE" GridPane.rowIndex="0" GridPane.columnIndex="1" />
    <Button text="C" GridPane.rowIndex="0" GridPane.columnIndex="2" />
    <Button text="⬅" GridPane.rowIndex="0" GridPane.columnIndex="3" />

    <!--Row 1-->
    <Button text="1/x" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <Button text="x^2" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    <Button text="√a" GridPane.rowIndex="1" GridPane.columnIndex="2" />
    <Button text="/" GridPane.rowIndex="1" GridPane.columnIndex="3" />

    <!--Row 2-->
    <Button text="1" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <Button text="2" GridPane.rowIndex="2" GridPane.columnIndex="1" />
    <Button text="3" GridPane.rowIndex="2" GridPane.columnIndex="2" />
    <Button text="*" GridPane.rowIndex="2" GridPane.columnIndex="3" />

    <!--Row 3-->
    <Button text="4" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <Button text="5" GridPane.rowIndex="3" GridPane.columnIndex="1" />
    <Button text="6" GridPane.rowIndex="3" GridPane.columnIndex="2" />
    <Button text="-" GridPane.rowIndex="3" GridPane.columnIndex="3" />

    <!--Row 4-->
    <Button text="7" GridPane.rowIndex="4" GridPane.columnIndex="0" />
    <Button text="8" GridPane.rowIndex="4" GridPane.columnIndex="1" />
    <Button text="9" GridPane.rowIndex="4" GridPane.columnIndex="2" />
    <Button text="+" GridPane.rowIndex="4" GridPane.columnIndex="3" />

    <!--Row 5-->
    <Button text="+/=" GridPane.rowIndex="4" GridPane.columnIndex="0" />
    <Button text="0" GridPane.rowIndex="4" GridPane.columnIndex="1" />
    <Button text="." GridPane.rowIndex="4" GridPane.columnIndex="2" />
    <Button text="=" GridPane.rowIndex="4" GridPane.columnIndex="3" />

  </GridPane>
</AnchorPane>
